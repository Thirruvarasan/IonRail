<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.railway.ionrail2.HomePageAdmin"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    android:background="@drawable/bb"
    tools:openDrawer="start">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bb"
        android:fitsSystemWindows="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME ADMIN"
            android:id="@+id/welcomeNote"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="70dp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/logonoback"
            android:contentDescription="hiii" />

        <TextView
            android:id="@+id/ionrailtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textAlignment="center"
            android:text="RAILWAY CROSSING SYSTEM"
            android:textColor="@color/black"
            android:textSize="28dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/btnEcomplaintAdminn"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/Dandelion"
            android:clickable="true"
            android:text="E_COMPLAINT"
            android:textColor="@color/Deep_Blue"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />
        <Button
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/btnContactStaff"
            android:text="CONTACT STAFF"
            android:textColor="@color/Deep_Blue"
            android:backgroundTint="@color/Dandelion"
            android:textStyle="bold"
            android:clickable="true"/>
        <Button
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/btnAlert"
            android:text="ALERT"
            android:textColor="@color/Deep_Blue"
            android:backgroundTint="@color/Dandelion"
            android:textStyle="bold"
            android:clickable="true"/>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:id="@+id/nav_view"
        android:layout_gravity="start">

    </com.google.android.material.navigation.NavigationView>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                tools:ignore="MissingConstraints">

            </androidx.appcompat.widget.Toolbar>

        </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.drawerlayout.widget.DrawerLayout>